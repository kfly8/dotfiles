[alias]
  ci = commit -v
  co = checkout
  br = branch
  st = status -s
  l  = log --oneline
  d  = diff
  df = diff --no-prefix
  new = whatchanged HEAD@{1}..HEAD --reverse --stat
  tree = log --graph --pretty='format:%C(yellow)%h%Creset %s %Cgreen(%an)%Creset %Cred%d%Creset'
[core]
  excludesfile = ~/.gitignore
  pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
  syntax-theme = Monokai Extended
  #features = side-by-side line-numbers decorations list-themes
  features = line-numbers decorations list-themes
  whitespace-error-style = 22 reverse
[push]
  default = current
  autoSetupRemote = true
[pull]
  rebase = true
[commit]
  template = ~/.gitmessage
[tig "bind"]
  generic = g move-first-line
  generic = G move-last-line
[github]
  user = kfly8
[merge]
  stat = true
  ff   = false
[branch]
  autosetupmerge = false
  autosetuprebase = always

[ghq]
  root = ~/src

[user]
  name = kobaken
  email = kentafly88@gmail.com

[include]
  path = ~/.gitconfig.inc

[includeIf "gitdir:~/src/"]
  path = ~/.gitconfig-ghq.inc

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[init]
  defaultBranch = main
[wo]
  root = ~/wo
  postHook = ~/.config/git-wo/post-hook
  sandboxProfile = ~/.config/git-wo/sandbox.sb
